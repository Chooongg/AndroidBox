<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BoxTheme" parent="Base.BoxTheme">
        <item name="android:statusBarColor">?colorPrimary</item>
        <item name="toolbarStyle">@style/BoxWidget.Toolbar.Primary</item>
        <item name="actionBarStyle">@style/BoxWidget.Toolbar.Primary</item>
    </style>

    <style name="BoxTheme.CenterTitle" parent="BoxTheme">
        <item name="android:statusBarColor">?colorPrimary</item>
        <item name="toolbarStyle">@style/BoxWidget.Toolbar.Primary</item>
        <item name="actionBarStyle">@style/BoxWidget.Toolbar.Primary</item>
        <item name="titleCentered">true</item>
        <item name="subtitleCentered">true</item>
    </style>

    <style name="BoxTheme.PrimarySurface" parent="Base.BoxTheme">
        <item name="android:statusBarColor">?colorPrimarySurface</item>
        <item name="toolbarStyle">@style/BoxWidget.Toolbar.PrimarySurface</item>
        <item name="actionBarStyle">@style/BoxWidget.Toolbar.PrimarySurface</item>
    </style>

    <style name="BoxTheme.PrimarySurface.CenterTitle" parent="BoxTheme.PrimarySurface">
        <item name="android:statusBarColor">?colorPrimarySurface</item>
        <item name="toolbarStyle">@style/BoxWidget.Toolbar.PrimarySurface</item>
        <item name="actionBarStyle">@style/BoxWidget.Toolbar.PrimarySurface</item>
        <item name="titleCentered">true</item>
        <item name="subtitleCentered">true</item>
    </style>

    <style name="BoxTheme.Surface" parent="Base.BoxTheme">
        <item name="android:statusBarColor">@android:color/darker_gray</item>
        <item name="toolbarStyle">@style/BoxWidget.Toolbar.Surface</item>
        <item name="actionBarStyle">@style/BoxWidget.Toolbar.Surface</item>
    </style>

    <style name="BoxTheme.Surface.CenterTitle" parent="BoxTheme.Surface">
        <item name="android:statusBarColor">?colorSurface</item>
        <item name="toolbarStyle">@style/BoxWidget.Toolbar.Surface</item>
        <item name="actionBarStyle">@style/BoxWidget.Toolbar.Surface</item>
        <item name="titleCentered">true</item>
        <item name="subtitleCentered">true</item>
    </style>


    <style name="Base.BoxTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/onError</item>
        <item name="android:windowAnimationStyle">@style/BoxWindowAnimation</item>
        <!-- 圆角设置 -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearanceImage.Rounded.8dp</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearanceImage.Rounded.8dp</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearanceImage.Rounded.8dp</item>
        <!-- 工具栏配置 -->
        <item name="statusBarScrim">@android:color/transparent</item>
        <item name="toolbarStyle">@style/BoxWidget.Toolbar.PrimarySurface</item>
        <item name="actionBarStyle">@style/BoxWidget.Toolbar.PrimarySurface</item>
        <item name="actionBarSize">@dimen/d48</item>
        <item name="android:actionBarSize">@dimen/d48</item>
        <item name="toolbarNavigationButtonStyle">@style/BoxToolBarNavigationButton</item>
        <item name="titleCentered">false</item>
        <item name="subtitleCentered">false</item>
        <!-- 添加 Transitions 支持 -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <!-- 前后两个页面是同步执行还是顺序执行, true为同步 -->
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="BoxWindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/parallax_horizontal_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/parallax_horizontal_open_exit</item>
        <item name="android:activityCloseExitAnimation">@anim/parallax_horizontal_close_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/parallax_horizontal_close_enter
        </item>
    </style>

    <style name="BoxToolBarNavigationButton" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="minWidth">?actionBarSize</item>
        <item name="maxWidth">?actionBarSize</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="sdf" parent="Widget.Material3.Snackbar">

    </style>

</resources>